<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
      <h3>Login</h3>
      <form class="register-form" action="{{user_login_path}}" method="POST">

        <div class="form-group">
          <label for="email">Email</label>
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <input type='email' class='form-control placeholder-no-fix' id='email' name='email' />
          </div>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input type='password' class='form-control placeholder-no-fix' id='password' name='password' />
          </div>
        </div>

        <div class="form-group">

            <button class='btn green'>Sign in</button>
            <button class='btn btn-default'>Create account</button>
        </div>

        <a>Forgot password?</a>

        </div>
      </form>
  </div>
  <div class="col-md-4"></div>
</div>