<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
      <h3>Create Account</h3>
      <form class="register-form" action="{{user_create_path}}" method="POST">

        <div class="form-group">
          <label for="name">Full Name</label>
          <div class="input-icon">
            <i class="fa fa-user"></i>
            <input type='text' class='form-control placeholder-no-fix' id='name' name='name' />
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <input type='email' class='form-control placeholder-no-fix' id='email' name='email' />
          </div>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input type='password' class='form-control placeholder-no-fix' id='password' name='password' />
          </div>
        </div>

        <div class="form-group">
            <button class='btn green'>Create account</button>
            <a class='btn btn-default' href="{{user_login_path}}">Sign in</a>
        </div>

        <a href="{{user_reset_password_path}}">Forgot password?</a>

        </div>
      </form>
  </div>
  <div class="col-md-4"></div>
</div>