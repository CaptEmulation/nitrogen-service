<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
      <h3>Password Reset</h3>
      <form class="register-form" action="{{user_reset_password_path}}" method="POST">

        <div class="form-group">
          <p>We'll email you instructions to reset your password within a few minutes.</p>
          <label for="email">Email</label>
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <input type='email' class='form-control placeholder-no-fix' id='email' name='email' />
          </div>
        </div>

        <div class="form-group">
            <button class='btn green'>Reset password</button>
            <a class='btn btn-default' href="{{user_login_path}}">Sign in</a>
        </div>
      </form>
  </div>
  <div class="col-md-4"></div>
</div>