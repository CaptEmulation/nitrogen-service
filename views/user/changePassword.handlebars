<div class="container" style='margin-top: 25px;'>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h3>Change Password</h3>

        <form class="register-form" action="{{user_change_password_path}}" method="POST">
          <div class="form-group">
            <label for="password">Current Password</label>
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              <input type='password' class='form-control placeholder-no-fix' id='currentPassword' name='currentPassword' />
            </div>
          </div>

          <div class="form-group">
            <label for="password">New Password</label>
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              <input type='password' class='form-control placeholder-no-fix' id='newPassword' name='newPassword' />
            </div>
          </div>

          <div class="form-group">
            <label for="password">Repeat New Password</label>
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              <input type='password' class='form-control placeholder-no-fix' id='newPasswordAgain' name='newPasswordAgain' />
            </div>
          </div>

          <button class='btn green'>Change password</button>
        </form>

    </div>
    <div class="col-md-4"></div>
  </div>
</div>